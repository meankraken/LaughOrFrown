<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Pacifico" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lato" />
    <link href="~/styles/profile.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div id="profileBar">
        <div class="profileText">
            <h6>USER PROFILE</h6>
            <h2>@ViewBag.User</h2>
        </div> 

        <div class="laughText">
            <h1>Laugh or Frown</h1>
        </div>

        <div class="backText">
            <h6>BACK TO</h6>
            <a asp-controller="App" asp-action="TopJokes"><h2>BROWSING</h2></a>
        </div>

        <div class="navLinks">
            <a asp-action="Index" class=@linkClass("Profile")>INFO</a> 
            &nbsp;|&nbsp;
            <a asp-action="Jokes" class=@linkClass("Jokes")>JOKES</a>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <div class="footerLinks">
        @RenderSection("footer", false)
        <form id="logoutForm" method="post" asp-controller="App" asp-action="Logout">
            <a href="#">Logout</a>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/scripts/profileScript.js"></script>
    @RenderSection("scripts", false);

</body>
</html>


@functions {
    public string linkClass(string title)
    {
        if (ViewBag.Title == title)
        {
            return "active";
        }
        else return "";
    }
}